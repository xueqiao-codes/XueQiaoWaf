<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">

    <!-- font settings -->
    <sys:Double x:Key="LargeTitleFontSize">18</sys:Double>
    <sys:Double x:Key="DialogTitleFontSize">18</sys:Double>
    <sys:Double x:Key="RegularTitleFontSize">16</sys:Double>
    <sys:Double x:Key="ExtraLargeContentFontSize">18</sys:Double>
    <sys:Double x:Key="LargeContentFontSize">16</sys:Double>
    <sys:Double x:Key="PrimaryContentFontSize">14</sys:Double>
    <sys:Double x:Key="SecondaryContentFontSize">12</sys:Double>
    
    <!-- layout margins -->
    <Thickness x:Key="RootMargin">-42,-8,-16,-16</Thickness>
    <Thickness x:Key="ContentMargin">16,28,16,16</Thickness>
    <Thickness x:Key="StatusMargin">-16,16,0,0</Thickness>
    <Thickness x:Key="HeaderMargin">0,-28,44,0</Thickness>

    <Thickness x:Key="SplitLeft">0,0,0,0</Thickness>
    <Thickness x:Key="SplitRight">16,0,0,0</Thickness>

    <Style x:Key="ContentRoot" TargetType="FrameworkElement">
        <Setter Property="Margin" Value="{StaticResource ContentMargin}" />
    </Style>
</ResourceDictionary>