<UserControl x:Class="XueQiaoWaf.LoginUserManage.Modules.Presentation.Views.SelectCompanyGroupContentView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:hosting_proxy="clr-namespace:xueqiao.trade.hosting.proxy;assembly=IDLAutoGenerated"
             xmlns:vm="clr-namespace:XueQiaoWaf.LoginUserManage.Modules.Applications.ViewModels;assembly=XueQiaoWaf.LoginUserManage.Modules.Applications"
             xmlns:convert="clr-namespace:XueQiaoFoundation.BusinessResources.Converters;assembly=XueQiaoFoundation.BusinessResources"
             Width="260"
             mc:Ignorable="d" 
             d:DataContext="{x:Type vm:SelectCompanyGroupContentVM}">
    <UserControl.Resources>
        <convert:HostingServiceStatus2DescConverter x:Key="HostingServiceStatus2DescConverter"/>
    </UserControl.Resources>
    <StackPanel Margin="30,40,30,20">
        <Grid Height="16" Margin="0,0,0,4">
            <!-- Exception status -->
            <TextBlock VerticalAlignment="Bottom"
                       FontSize="{DynamicResource SecondaryContentFontSize}"
                       Foreground="{DynamicResource ErrorBrush1}"
                       Text="{Binding ElementName=CompanyGroupsComboBox, Path=SelectedItem.Status, Converter={StaticResource HostingServiceStatus2DescConverter}}">
                <TextBlock.Style>
                    <Style TargetType="TextBlock">
                        <Setter Property="Visibility" Value="Visible"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding Status}" Value="{x:Static hosting_proxy:HostingServiceStatus.WORKING}">
                                <Setter Property="Visibility" Value="Collapsed"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </TextBlock.Style>
            </TextBlock>
        </Grid>
        <ComboBox ItemsSource="{Binding CompanyGroups}"
                  IsSynchronizedWithCurrentItem="True"
                  SelectedItem="{Binding SelectedCompanyGroup, Mode=TwoWay}"
                  x:Name="CompanyGroupsComboBox">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding GroupName}" x:Name="GroupName" Foreground="{DynamicResource ContentBrush3}"/>
                    <DataTemplate.Triggers>
                        <DataTrigger Binding="{Binding Status}" Value="{x:Static hosting_proxy:HostingServiceStatus.WORKING}">
                            <Setter TargetName="GroupName" Property="Foreground" Value="{DynamicResource ContentBrush1}"/>
                        </DataTrigger>
                    </DataTemplate.Triggers>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>
        <StackPanel HorizontalAlignment="Stretch" Orientation="Vertical" VerticalAlignment="Center" Margin="0,30,0,0">
            <Button Content="确定"
                    Command="{Binding ConfirmCmd}"
                    Style="{StaticResource FlatBgButtonPrimary2}"/>
        </StackPanel>
    </StackPanel>
</UserControl>
