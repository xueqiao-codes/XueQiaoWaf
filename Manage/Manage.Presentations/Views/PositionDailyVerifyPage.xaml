<Page x:Class="Manage.Presentations.Views.PositionDailyVerifyPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:convert="clr-namespace:XueQiaoFoundation.BusinessResources.Converters;assembly=XueQiaoFoundation.BusinessResources"
      xmlns:uiextra_convert="clr-namespace:XueQiaoFoundation.UI.Extra.converter;assembly=XueQiaoFoundation.UI.Extra"
      xmlns:adjust="clr-namespace:xueqiao.trade.hosting.position.adjust.thriftapi;assembly=IDLAutoGenerated"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
      Background="{DynamicResource RootBgBrush}"
      Style="{StaticResource GeneralPageStyle}">
    <Page.Resources>
        <convert:VerifyStatus2NameConverter x:Key="VerifyStatus2NameConverter"/>
        <uiextra_convert:Timestamp2StringConverter x:Key="Second2DayStr" Convert2StringFormatType="Date" ValueType="Second"/>
    </Page.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Vertical">
            <Grid Height="40">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" x:Name="NavbarFirstColumn"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="{Binding ElementName=NavbarFirstColumn, Path=ActualWidth}"/>
                </Grid.ColumnDefinitions>
                <Button Command="{Binding PageGoBackCmd}" Style="{StaticResource FlatContentButtonPrimary3}"
                    VerticalAlignment="Center">
                    <TextBlock>
                        <Run Text="〈 返回" FontSize="{DynamicResource RegularTitleFontSize}"/>
                    </TextBlock>
                </Button>
            </Grid>
            <Rectangle Height="1" Fill="{DynamicResource BorderBrush3}"/>
        </StackPanel>
        <Grid Grid.Row="1" Margin="15,0,15,15">
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <WrapPanel Orientation="Horizontal" VerticalAlignment="Center" Grid.ColumnSpan="3">
                <TextBlock>
                    <Run Text="核对合约："/>
                    <Run Text="{Binding ContractDetailContainer.CnDisplayName, Mode=OneWay}" ToolTip="{Binding RelativeSource={RelativeSource self}, Path=Text}"/>
                </TextBlock>
                <TextBlock Margin="15,0,0,0">
                    <Run Text="日期："/>
                    <Run Text="{Binding DailyDiff.DateSec, Converter={StaticResource Second2DayStr}}"/>
                </TextBlock>
                <TextBlock Margin="15,0,0,0">
                    <Run Text="资金账户成交净仓："/>
                    <Run Text="{Binding DailyDiff.UpsideNetPosition}"/>
                </TextBlock>
                <TextBlock Margin="15,0,0,0">
                    <Run Text="雪橇成交净仓："/>
                    <Run Text="{Binding DailyDiff.SledNetPosition}"/>
                </TextBlock>
                <TextBlock Margin="15,0,0,0">
                    <Run Text="雪橇录入净仓："/>
                    <Run Text="{Binding DailyDiff.InputNetPosition}"/>
                </TextBlock>
                <TextBlock Margin="15,0,0,0">
                    <Run Text="雪橇汇总净仓："/>
                    <Run Text="{Binding DailyDiff.SumNetPosition}"/>
                </TextBlock>

                <Rectangle 
                    Width="1" Height="18" VerticalAlignment="Center" Fill="{DynamicResource BorderBrush2}" 
                    Margin="10,0"/>

                <DockPanel VerticalAlignment="Center">
                    <DockPanel Margin="0,0,10,0">
                        <Button 
                        DockPanel.Dock="Right" VerticalAlignment="Center"
                        Style="{StaticResource FlatContentButtonPrimary3}"
                        Content="编辑"
                        Command="{Binding ToUpdateVerifyStatusCmd}"/>
                        <StackPanel DockPanel.Dock="Left" Margin="0,0,10,0" VerticalAlignment="Center" Orientation="Horizontal">
                            <StackPanel.Resources>
                                <Style TargetType="TextBlock" x:Key="VerifyStatusText">
                                    <Setter Property="Foreground" Value="{DynamicResource MinorBrush1}"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding DailyDiff.VerifyStatus}" Value="{x:Static adjust:VerifyStatus.VERIFY_COMPLETE}">
                                            <Setter Property="Foreground" Value="{DynamicResource ContentBrush1}"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </StackPanel.Resources>
                            <WrapPanel Orientation="Horizontal">
                                <TextBlock Text="备注："/>
                                <TextBlock Text="{Binding DailyDiff.VerifyStatus, Converter={StaticResource VerifyStatus2NameConverter}}" Style="{StaticResource VerifyStatusText}"/>
                            </WrapPanel>
                            <TextBlock Margin="10,0,0,0" Text="{Binding DailyDiff.Note}"/>
                        </StackPanel>
                    </DockPanel>
                </DockPanel>
            </WrapPanel>
           
            <!-- 交易结算单参考视图 -->
            <Border Grid.Row="1" Grid.Column="0"
                    BorderThickness="1,1,0,1" BorderBrush="{DynamicResource BorderBrush2}">
                <ContentControl Content="{Binding UpsideSettlementReferenceView}"/>    
            </Border>
            
            <!--<GridSplitter Grid.Column="1" Grid.Row="1"
                          Style="{StaticResource GridSplitterVertical}" Background="{x:Null}"/>-->
            <GridSplitter Grid.Row="1" Grid.Column="1" Width="1"
                      Background="{DynamicResource BorderBrush2}"
                      HorizontalAlignment="Center"
                      VerticalAlignment="Stretch"/>

            <Grid Grid.Column="2" Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="1.5*" MinHeight="150"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*" MinHeight="150"/>
                </Grid.RowDefinitions>
                <!-- 雪橇成交记录参考视图 -->
                <Border Grid.Row="0"
                        BorderThickness="0,1,1,0" BorderBrush="{DynamicResource BorderBrush2}">
                    <ContentControl Content="{Binding SledTradeRecordReferenceView}"/>
                </Border>
                <!--<GridSplitter Grid.Row="1"
                          Style="{StaticResource GridSplitterHorizon}" Background="{x:Null}"/>-->
                <GridSplitter Grid.Row="1" Height="1" VerticalAlignment="Center" HorizontalAlignment="Stretch" Background="{DynamicResource BorderBrush2}"/>
                <!-- 雪橇成交录入区域视图 -->
                <Border Grid.Row="2"
                        BorderThickness="0,0,1,1" BorderBrush="{DynamicResource BorderBrush2}">
                    <ContentControl Content="{Binding SledTradeInputView}"/>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</Page>
