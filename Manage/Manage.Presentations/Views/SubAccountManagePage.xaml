<Page x:Class="Manage.Presentations.Views.SubAccountManagePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:convert="clr-namespace:XueQiaoFoundation.BusinessResources.Converters;assembly=XueQiaoFoundation.BusinessResources"
      xmlns:uiconvert="clr-namespace:XueQiaoFoundation.UI.Converters;assembly=XueQiaoFoundation.UI"
      xmlns:trade_hosting="clr-namespace:xueqiao.trade.hosting;assembly=IDLAutoGenerated"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="800"
      Background="{DynamicResource RootBgBrush}"
      Style="{StaticResource GeneralPageStyle}"
      KeepAlive="True"
      x:Name="PageRoot">
    <Page.Resources>
        <convert:HostingUserStateToDisplayNameConverter x:Key="HostingUserStateToDisplayNameConverter"/>
        <convert:HostingUserRole2DisplayNameConverter x:Key="HostingUserRole2DisplayNameConverter"/>
        <uiconvert:CloneValuesConverter x:Key="CloneValuesConverter"/>
    </Page.Resources>

    <DockPanel Margin="15,15,15,0" LastChildFill="True">
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="0,0,0,8" HorizontalAlignment="Left">
            <Button Content="+新建操作账户"
                    Command="{Binding ToAddSubAccountCmd}"
                    Style="{StaticResource FlatBgButtonPrimary3}"
                    VerticalAlignment="Center"/>
            <Button Margin="8,0,0,0" 
                    Content="刷新"
                    Style="{StaticResource FlatBgButtonPrimary3}"
                    VerticalAlignment="Center"
                    Command="{Binding ToRefreshListCmd}"/>
        </StackPanel>
        <ContentControl DockPanel.Dock="Bottom" Margin="0, 10" 
                        HorizontalAlignment="Center"
                        Content="{Binding PagerContentView}"/>
        <DataGrid DockPanel.Dock="Top"
                  IsSynchronizedWithCurrentItem="True"
                  ItemsSource="{Binding SubAccountItems}"
                  IsReadOnly="True"
                  SelectionUnit="FullRow"
                  Tag="{Binding}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="账号" Binding="{Binding AccountMeta.SubAccountId}" MinWidth="80"/>
                <DataGridTemplateColumn Header="名称" MinWidth="100">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <WrapPanel Orientation="Horizontal" x:Name="NamePanel">
                                <Button Style="{StaticResource FlatContentButtonPrimary3}"
                                        Content="修改"
                                        FontSize="{DynamicResource SecondaryContentFontSize}"
                                        Command="{Binding Path=Tag.TriggerRenameCmd, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                        Margin="0,0,8,0">
                                    <Button.CommandParameter>
                                        <MultiBinding Converter="{StaticResource CloneValuesConverter}">
                                            <Binding/>
                                            <Binding ElementName="NamePanel"/>
                                        </MultiBinding>
                                    </Button.CommandParameter>
                                </Button>
                                <TextBlock Text="{Binding AccountMeta.SubAccountName}"/>
                            </WrapPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn Header="用户" Width="2*" MinWidth="100">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <ItemsControl ItemsSource="{Binding AuthedToSubUsers}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <WrapPanel Orientation="Horizontal" IsItemsHost="True"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate DataType="{x:Type trade_hosting:HostingSubAccountRelatedItem}">
                                        <TextBlock>
                                            <Run x:Name="Semicolon" Text=";"/>
                                            <Run>
                                                <MultiBinding StringFormat="{}{0}({1})">
                                                    <Binding Path="SubUserLoginName"/>
                                                    <Binding Path="SubUserNickName"/>
                                                </MultiBinding>
                                            </Run>
                                        </TextBlock>
                                        <DataTemplate.Triggers>
                                            <DataTrigger Binding="{Binding RelativeSource={RelativeSource PreviousData}}" Value="{x:Null}">
                                                <Setter TargetName="Semicolon" Property="Text" Value="{x:Null}"/>
                                            </DataTrigger>
                                        </DataTemplate.Triggers>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn Width="1*"/>
                <DataGridTemplateColumn Header="用户管理" 
                                        CanUserSort="False" 
                                        HeaderStyle="{StaticResource DataGridColumnHeader_HorizontalAlignCenter}">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Style="{StaticResource FlatContentButtonPrimary3}"
                                    Content="管理"
                                    Margin="10,0"
                                    Command="{Binding Path=Tag.ToAuthToSubUserCmd, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                    CommandParameter="{Binding}"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Header="关联资金账户" CanUserSort="False" 
                                        HeaderStyle="{StaticResource DataGridColumnHeader_HorizontalAlignCenter}">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Style="{StaticResource FlatContentButtonPrimary3}"
                                    Content="设置"
                                    Margin="10,0"
                                    Command="{Binding Path=Tag.ToSetOrderRouteCmd, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                    CommandParameter="{Binding}"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Header="出入金"
                                        CanUserSort="False" 
                                        HeaderStyle="{StaticResource DataGridColumnHeader_HorizontalAlignCenter}">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" Margin="10,0">
                                <Button Style="{StaticResource FlatContentButtonPrimary3}"
                                    Content="入金"
                                    Command="{Binding Path=Tag.ToInFundCmd, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                    CommandParameter="{Binding}"/>
                                <Button Style="{StaticResource FlatContentButtonPrimary3}"
                                    Content="出金"
                                    Margin="20,0,0,0"
                                    Command="{Binding Path=Tag.ToOutFundCmd, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                    CommandParameter="{Binding}"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Header="出入金历史" 
                                        CanUserSort="False" 
                                        HeaderStyle="{StaticResource DataGridColumnHeader_HorizontalAlignCenter}">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Style="{StaticResource FlatContentButtonPrimary3}"
                                    Content="查看"
                                    Margin="10,0"
                                    Command="{Binding Path=Tag.ToShowInOutFundHistoryCmd, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                    CommandParameter="{Binding}"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                
                <DataGridTextColumn Width="1*"/>
            </DataGrid.Columns>
        </DataGrid>
    </DockPanel>
</Page>
